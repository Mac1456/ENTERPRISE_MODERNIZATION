# Environment Configuration
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=suitecrm_real_estate
DB_USERNAME=suitecrm
DB_PASSWORD=your_password_here

# Legacy SuiteCRM Database (for data migration)
LEGACY_DB_HOST=localhost
LEGACY_DB_PORT=3306
LEGACY_DB_DATABASE=suitecrm_legacy
LEGACY_DB_USERNAME=suitecrm
LEGACY_DB_PASSWORD=your_legacy_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@suitecrm-pro.com
MAIL_FROM_NAME="SuiteCRM Real Estate Pro"

# Third-Party Integrations
# MLS Integration
MLS_API_URL=https://api.mls.example.com
MLS_API_KEY=your_mls_api_key
MLS_SECRET=your_mls_secret

# Zillow Integration
ZILLOW_API_KEY=your_zillow_api_key

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# DocuSign Integration
DOCUSIGN_CLIENT_ID=your_docusign_client_id
DOCUSIGN_CLIENT_SECRET=your_docusign_client_secret
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id

# Twilio SMS
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=your_twilio_phone_number

# AWS S3 for File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=suitecrm-pro-storage

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# Lead Scoring Configuration
LEAD_SCORING_ENABLED=true
AUTO_ASSIGNMENT_ENABLED=true
GEOLOCATION_ENABLED=true

# Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# Cache Configuration
CACHE_DRIVER=redis
CACHE_TTL=3600

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# File Upload Limits
MAX_UPLOAD_SIZE=10M
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Security
BCRYPT_ROUNDS=12
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
TRUSTED_PROXIES=

# Development Tools
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null
LOG_SLACK_WEBHOOK_URL=

# Performance
OPCACHE_ENABLED=true
QUERY_LOG_ENABLED=false
SLOW_QUERY_LOG_ENABLED=true
SLOW_QUERY_TIME=2
